<!DOCTYPE html>
<html>
<head>
  <title>Chat Room</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container mt-4">
    <div class="d-flex justify-content-between">
      <h3>Chat Room</h3>
      <a href="/logout" class="btn btn-danger btn-sm">Logout</a>
    </div>
    <div id="messages" class="border p-3 mt-3 rounded bg-light" style="height:400px; overflow-y:scroll;">
      <% messages.forEach(msg => { %>
        <p><strong><%= msg.sender %>:</strong> <%= msg.message %></p>
      <% }) %>
    </div>
    <form id="chatForm" class="d-flex mt-3">
      <input id="msg" class="form-control me-2" autocomplete="off" placeholder="Type a message...">
      <button class="btn btn-primary">Send</button>
    </form>
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/chat.js"></script>
  <script>
    const user = "<%= user.username %>";
  </script>
</body>
</html>
